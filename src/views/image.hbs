{{!-- VISTA PARA RENDERIZAR UNA IMAGEN --}}

<div class="card">
    <div class="card-header d-flex justify-content-between aling-items-center bg-dark text-white">
        {{!-- title --}}
        <h2>{{image.title}}</h2>
        {{!-- button delete --}}
        <button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">
            <i class="fa fa-times"></i>
        </button>
    </div>
    <div class="card-body">
        {{!-- description --}}
        <p>{{image.descripton}}</p>
        <div class="text-center">
            {{!-- image --}}
            <img src="/public/upload/{{image.fileName}}" alt="image" class="img-fluid">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between aling-items-center">
        {{!-- button like --}}
        <button class="btn btn-success" id="btn-like" data-id="{{image.uniqueId}}">
            <i class="fas fa-thumbs-up"></i>
        </button>
        <p>
            {{!-- count likes --}}
            <i class="fas fa-heart"></i>
            <span class="likes-count">
                {{image.likes}}
            </span>
        </p>
        <p>
            {{!-- count views --}}
            <i class="fas fa-eye"></i>
            <span>
                {{image.views}}
            </span>
        </p>
        <p>
            {{!-- time ago --}}
            <i class="far fa-clock"></i> {{timeAgo image.timeStamp}}
        </p>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header bg-dark text-white d-flex justify-content-between aling-items-center">
        <h3>Comments</h3>
        {{!-- button comment --}}
        <button class="btn btn-info" id="btn-toggle-comment">
            <i class="fa fa-comment"></i> Post a comment
        </button>
    </div>
    <div class="card-body">
        <blockquote id="post-comment">
            {{!-- form comments --}}
            <form action="/images/{{image.uniqueId}}/comment" method="POST">
                <div class="form-group">
                    {{!-- name --}}
                    <input type="text" name="name" class="form-control" placeholder="Name" required>
                </div>
                <div class="form-group">
                    {{!-- email --}}
                    <input type="text" name="email" class="form-control" placeholder="Email" required>
                </div>
                <div class="form-group">
                    {{!-- content of comment --}}
                    <textarea name="comment" rows="2" class="form-control" placeholder="Your comment"
                        required></textarea>
                </div>
                <div class="form-group">
                    {{!-- button for upload a comment --}}
                    <button class="btn btn-success btn-block">
                        <i class="fa fa-comment"></i> Post
                    </button>
                </div>
            </form>
        </blockquote>
        {{!-- lista de comentarios --}}
        <ul class="list-group p-4">
            {{#each comments}}
            <li class="list-group-item" id="{{_id}}">
                <div class="row">
                    <a href="#" class="col text-center">
                        {{!-- icon gravatar --}}
                        <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="icon-gravatar">
                    </a>
                    <blockquote class="col">
                        {{!-- comment --}}
                        <p class="lead">
                            {{comment}}
                        </p>
                        <footer class="blockquote-footer">
                            {{name}} - {{timeAgo timeStamp}}
                        </footer>
                    </blockquote>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>