{{!-- tarjeta para el formulario de subida de imagenes --}}
<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-image"></i> Upload and image
        </h3>
    </div>
    <div class="card-body">
        {{!-- formulario --}}
        {{!-- enctype="multipart/form-data" especifica que va a enviar un dato pesado --}}
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        {{!-- seleccion de imagen --}}
                        <input type="file" name="image" class="custom-file-input" id="inputGroupFile"
                            aria-describedby="inputGroupFileAddon" required />
                        <label class="custom-file-label" for="inputGroupFile">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{!-- titulo de la imagen --}}
                <input type="text" name="title" class="form-control" placeholder="Title for the image" required>
            </div>
            <div class="form-group">
                {{!-- descripcion --}}
                <textarea name="description" rows="2" class="form-control" placeholder="Description for the image"
                    required></textarea>
            </div>
            <div class="form-group">
                {{!-- boton para subida --}}
                <button class="btn btn-success">
                    <i class="fa fa-upload"></i> Upload Image
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <h3><i class="far fa-images"></i> Recent Uploads</h3>
    </div>
    <div class="card-body">
        <div class="row">
            {{#each images}}
            <div class="col-md-4">
                <a href="/images/{{uniqueId}}">
                    <img class="w-100 h-100 img-thumbnail" src="/public/upload/{{fileName}}" alt="image" >
                </a>
            </div>
            {{/each}}
        </div>
    </div>
</div>